<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uygulama_arkaplan"
    tools:context="com.example.mustafa.switchtab.FirstActivity">

    <Button
        android:id="@+id/first_btnSignIn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/first_activity_buttons"
        android:onClick="toLogin"
        android:text="@string/first_btnSignIn"
        android:textColor="@color/first_buttonText"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/first_btnSignUp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/first_activity_buttons"
        android:onClick="toSignUp"
        android:text="@string/first_btnSignUp"
        android:textColor="@color/first_buttonText"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/first_btnSignIn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/first_tvRegistered"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal"
        android:text="@string/first_tvRegistered"
        android:textColor="@color/first_kayitliUye"
        app:layout_constraintBottom_toTopOf="@+id/first_btnSignIn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageView
        android:id="@+id/first_ivLogo"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginBottom="132dp"
        app:layout_constraintBottom_toTopOf="@+id/first_btnSignUp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/keepnote"
        app:layout_constraintHorizontal_bias="0.496" />

</android.support.constraint.ConstraintLayout>
